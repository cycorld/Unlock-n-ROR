<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <b><%= link_to "Unlock'n ROR", root_path, id: "logo" %></b>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle btn" data-toggle="dropdown">
              <%= current_user.name %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to user_profile_path(current_user) do %>
                  <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Profile
                <% end %>
              </li>
              <li>
                <%= link_to '#' do  %>
                  <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Settings
                <% end %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to "Log in", new_user_session_path, class: "btn btn-default navbar-inverse"  %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
