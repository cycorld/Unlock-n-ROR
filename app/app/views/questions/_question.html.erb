<div class="question">
    
  <div class="col-md-12 content">
    <div class="info">
      <%= link_to question.title, question %> by <b><%= question.user.name %></b>
      <br>
      <i>Tags:</i> 
      <% question.tags.map(&:name).each do |t| %>
        <tag><%= link_to t, "/tags/#{t}" %></tag>
	<% end %>
    </div>
    
      <div class="question_status">
	<i class="fa fa-thumbs-up" aria-label="voted_for" aria-hidden="true"></i>
	&nbsp;
        <b><%= question.get_upvotes.size - question.get_downvotes.size %></b>
	&nbsp;&nbsp;&nbsp;
        <i class="fa fa-comments" aria-label="answers" aria-hidden="true"></i>
        &nbsp;
        <b><%= question.answers.count %></b>
      </div>
    
    </div>
    
</div>
